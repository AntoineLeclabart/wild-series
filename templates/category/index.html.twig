{% extends 'base.html.twig' %}

{% block title %}Toutes les catégories!{% endblock %}

{% block body %}
<main>
   <h1>Toutes les séries de la table program : </h1>
    {% for category in categories %}
        <div>
            <h2>{{ loop.index }} / {{ category.name }}</h2>
            <a href="{{ path("category_show", { categoryName: category.name }) }}">Voir la catégorie</a>
        </div>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}

    <a href="{{ path('program_index') }}">
        Retour à l'accueil
    </a>
</main>
{% endblock %}
